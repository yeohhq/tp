@startuml
!include style.puml

box Logic LOGIC_COLOR_T1
participant ":LogicManager" as LogicManager LOGIC_COLOR
participant ":AddressBookParser" as AddressBookParser LOGIC_COLOR
participant ":AppointmentWithFilterCommandParser" as AppointmentWithFilterCommandParser LOGIC_COLOR
participant "predicate:AppointmentFilter" as AppointmentFilter LOGIC_COLOR
participant "command:AppointmentWithFilterCommand" as AppointmentFindPatientCommand LOGIC_COLOR
participant "result :CommandResult" as CommandResult LOGIC_COLOR
end box

box Model MODEL_COLOR_T1
participant ":Model" as Model MODEL_COLOR
end box

[-> LogicManager : execute("input")
activate LogicManager

LogicManager -> AddressBookParser : parseCommand("input")
activate AddressBookParser

create AppointmentWithFilterCommandParser
AddressBookParser -> AppointmentWithFilterCommandParser
activate AppointmentWithFilterCommandParser

AppointmentWithFilterCommandParser --> AddressBookParser
deactivate AppointmentWithFilterCommandParser

AddressBookParser -> AppointmentWithFilterCommandParser : parse("input")
activate AppointmentWithFilterCommandParser


create AppointmentFilter
AppointmentWithFilterCommandParser -> AppointmentFilter
activate AppointmentFilter

AppointmentFilter --> AppointmentWithFilterCommandParser : predicate
deactivate AppointmentFilter

create AppointmentFindPatientCommand
AppointmentWithFilterCommandParser -> AppointmentFindPatientCommand
activate AppointmentFindPatientCommand

AppointmentFindPatientCommand --> AppointmentWithFilterCommandParser : command
deactivate AppointmentFindPatientCommand

AppointmentWithFilterCommandParser --> AddressBookParser : command
deactivate AppointmentWithFilterCommandParser
'Hidden arrow to position the destroy marker below the end of the activation bar.
DeleteCommandParser -[hidden]-> AddressBookParser
destroy AppointmentWithFilterCommandParser

AddressBookParser --> LogicManager : command
deactivate AddressBookParser

LogicManager -> AppointmentFindPatientCommand : execute()
activate AppointmentFindPatientCommand

AppointmentFindPatientCommand -> Model : updateFilteredAppointmentList(predicate)
activate Model

Model --> AppointmentFindPatientCommand
deactivate Model

create CommandResult
AppointmentFindPatientCommand -> CommandResult
activate CommandResult

CommandResult --> AppointmentFindPatientCommand
deactivate CommandResult

AppointmentFindPatientCommand --> LogicManager : result
deactivate AppointmentFindPatientCommand

[<--LogicManager
deactivate LogicManager
@enduml
